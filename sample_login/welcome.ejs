<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WELCOME</title>
    <link rel="stylesheet" href="assets/welcome.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="navbar-brand">
            <h1>Clear Aid</h1>
        </div>
        <ul class="navbar-menu">
            <li><a href="#dashboard">Dashboard</a></li>
            <li><a href="/funds">Funds</a></li>
            <li><a href="/donations">Donations</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Welcome Section -->
        <section class="welcome-section">
            <h1>Welcome, User</h1>
            <h2><%= username %></h2>

            <!-- Image container with specific dimensions -->
            <div class="image-container">
                <img src="/profile-image/<%= username %>" alt="Profile Image" />
            </div>

            <form action="/upload-image" method="post" enctype="multipart/form-data">
                <label for="imageUpload" class="custom-file-upload">
                    <i class="fas fa-upload"></i> Choose an Image
                </label>
                <input type="file" id="imageUpload" name="image" accept="image/*" required>
                <button type="submit">Submit</button>
            </form>
        </section>

        <!-- Dashboard Section -->
        <section id="dashboard" class="dashboard-section">
            <h2>Dashboard</h2>
            <div class="dashboard-cards">
                <!-- Current Fund Balance -->
                <div class="card">
                    <div class="card-icon">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <div class="card-content">
                        <h3>Current Balance</h3>
                        <p>$<span id="current-balance">50,000</span></p>
                    </div>
                </div>

                <!-- Fundraising Goal -->
                <div class="card">
                    <div class="card-icon">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <div class="card-content">
                        <h3>Fundraising Goal</h3>
                        <p>$<span id="funding-goal">100,000</span></p>
                        <div class="progress-bar">
                            <div class="progress" style="width: 50%;"></div>
                        </div>
                    </div>
                </div>

                <!-- Recent Donations -->
                <div class="card">
                    <div class="card-icon">
                        <i class="fas fa-donate"></i>
                    </div>
                    <div class="card-content">
                        <h3>Recent Donations</h3>
                        <ul>
                            <li>John Doe - $500</li>
                            <li>Jane Smith - $300</li>
                            <li>Emily Johnson - $200</li>
                        </ul>
                    </div>
                </div>

                <!-- Transaction History -->
                <div class="card">
                    <div class="card-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <div class="card-content">
                        <h3>Transaction History</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-04-01</td>
                                    <td>Donation</td>
                                    <td>$500</td>
                                </tr>
                                <tr>
                                    <td>2024-04-03</td>
                                    <td>Withdrawal</td>
                                    <td>$200</td>
                                </tr>
                                <tr>
                                    <td>2024-04-05</td>
                                    <td>Donation</td>
                                    <td>$300</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

        <!-- Additional Sections (Optional) -->
        <!-- You can add more sections like "Upcoming Events", "Notifications", etc. -->
    </div>
</body>

</html>
